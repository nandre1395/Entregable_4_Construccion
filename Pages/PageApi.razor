@page "/usuarios"
@using Entregable4.Model
@inject HttpClient client

<style>

</style>

<h1> Lista de Usuarios </h1>

@foreach (PostDTO post in posts)
{
    <h2>@post.id</h2>
    <p>@post.name</p>
    <p>@post.username</p>
    <p>@post.email</p>
    <a href="usuarios/@post.id">Ver Mas</a>
    <hr>
}

@code {
    private List<PostDTO> posts;

    protected override async Task OnInitializedAsync()

        {
        posts = await client.
        GetFromJsonAsync<List<PostDTO>>("https://jsonplaceholder.typicode.com/users");
        }
}

